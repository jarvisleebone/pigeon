<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:pigeon="http://pigeon.org/schema/pigeon"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://pigeon.org/schema/pigeon
       http://pigeon.org/schema/pigeon.xsd">

    <pigeon:config id="config" protocol="mina" route="random" serializer="protostuff" />

    <!--<pigeon:registry id="registry" protocol="zookeeper" address="192.168.0.114" port="2181" />-->
    <pigeon:registry id="registry" protocol="zookeeper" address="192.168.216.129" port="2181" />

    <pigeon:client id="helloService" interface="org.pigeon.demo.server.service.HelloService">
        <pigeon:method id="hello" name="hello" sync="true" />
    </pigeon:client>
    <pigeon:client id="worldService" interface="org.pigeon.demo.server.service.WorldService">
        <pigeon:method id="world" name="world" sync="false" callback="worldServiceCallback" />
    </pigeon:client>

    <bean id="worldServiceCallback" class="org.pigeon.demo.client.callback.WorldServiceCallback" />

</beans>